@model Sagonne.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
	<form method="post" id="form-login" asp-controller="Account" asp-action="Login" class="form-horizontal" enctype="multipart/form-data">
		<div class="row">
			<div class="col-xs-6">
				Login : <input type="text" name="login" id="login" asp-for="Login" /><br />
				Mot de passe : <input type="password" name="mdp" id="mdp" asp-for="Mdp" /><br />
				<label>
					Rester Connecté ?
					<input type="checkbox" asp-for="KeepLoggedIn" />
				</label>
				<input type="submit" value="Continuer" id="Continuer" />
			</div>
		</div>
		<div class="row">
			@if (ViewData["ValidateMessage"] != null)
			{
				<br />
				<br />
				<label>@ViewData["ValidateMessage"]</label>
			}
		</div>
	</form>
</body>
</html>
